<div class="input-group">
  <%= form_with(url: search_path, method: :post, local: false, html: { class: "form-inline" }) do |f| %>
    <div class="row"> 
      <div class="col-sm-4">
        <%= f.label 'Search for reviews:', class: "form-block"  %>
      </div>
    <div class="form-group">
      <%= f.text_field :search_terms, 
                      placeholder: "title:logan medium:movie genre:action-adventure", class: 'form-control' %>
      <span class="input-group-btn">
      <%= button_tag do %>
        <%= fa_icon "search" %>
      <% end %>
      </span>
    </div>
  <% end %>
</div>


  

